<UserControl x:Class="GameCheckerWpf.Views.HardwareMonitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xrpb="http://XamlRadialProgressBar/DotNet"
             xmlns:local="clr-namespace:GameCheckerWpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#181735">
    <Grid>
        <xrpb:RadialProgressBar Value="{Binding CountCpu, UpdateSourceTrigger=PropertyChanged}"
			    Width="100" Height="100"
			    Foreground="White" Margin="0,0,0,180" />
        <Label Content="{Binding CountCpu}" FontSize="30" Margin="0,0,0,250"></Label>
        <xrpb:RadialProgressBar Value="{Binding CountMemory, UpdateSourceTrigger=PropertyChanged}"
			    Width="100" Height="100"
			    Foreground="White"
                                Margin="0,130,0,0"/>
        <Label Content="{Binding CountMemory}" FontSize="30" Margin="0,260,0,150"></Label>
        <Label x:Name="lbl_cpu" FontSize="30" Foreground="White"></Label>
    </Grid>
</UserControl>
