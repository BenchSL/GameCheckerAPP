<Window x:Class="GameCheckerWpf.LoginAutenticationWindows.LoginDeniedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameCheckerWpf.LoginAutenticationWindows"
        mc:Ignorable="d"
        Background="#181735"
        WindowStyle="None"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        Title="LoginDeniedWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock x:Name="exception_box" TextWrapping="Wrap" FontSize="30" FontFamily="Times New Roman" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" />
        <Button x:Name="btn_cancel" Height="50" Width="300" Content="Close" Grid.Row="2" FontSize="30" FontFamily="Times New Roman" Click="btn_cancel_Click"></Button>
    </Grid>
</Window>
